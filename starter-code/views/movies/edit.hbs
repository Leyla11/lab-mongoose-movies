<main class="edit-movie">
  <h2>Edit Movie</h2>
  {{#if this.error}}
  <div class="error">
    {{this.error}}
  </div>
  {{/if}}
  <form method="POST" action="/movies/{{ this.movie._id }}">
    <div>
      <label for="title">Title</label>
      <input type="text" name="title" id="title" value="{{ this.movie.title }}" required>
    </div>
    <div>
      <label for="genre">Genre</label>
      <input type="text" name="genre" id="genre" value="{{ this.movie.genre }}" required>
      <div>
        <label for="plot">Plot</label>
        <input type="text" name="plot" id="plot" value="{{ this.movie.plot }}" required>
      </div>
      <button type="submit">Edit Movie</button>
  </form>
</main>